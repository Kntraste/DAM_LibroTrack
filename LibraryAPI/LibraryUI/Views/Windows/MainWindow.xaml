<Window x:Class="LibraryUI.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryUI.Views.Windows"
        xmlns:userControls="clr-namespace:LibraryUI.Views.UserControls"
        mc:Ignorable="d"
        Title="{DynamicResource lblAppTitle}" Height="750" Width="1400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <userControls:MenuBar x:Name="MenuBar" Grid.Row="0" />
        <ContentControl x:Name="MainContent" Grid.Row="1" />
    </Grid>
</Window>
