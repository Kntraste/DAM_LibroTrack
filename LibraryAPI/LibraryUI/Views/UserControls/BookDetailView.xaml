<UserControl x:Class="LibraryUI.Views.UserControls.BookDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LibraryUI.Views.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{DynamicResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button x:Name="btnCreate" Grid.Column="0" Height="30" Width="100" Content="{DynamicResource btnCreate}"
                Click="btnCreate_Click" />
            <Button x:Name="btnUpdate" Grid.Column="1" Height="30" Width="100" Content="{DynamicResource btnUpdate}"
                Click="btnUpdate_Click" />
            <Button x:Name="btnDelete" Grid.Column="2" Height="30" Width="100" Content="{DynamicResource btnDelete}"
                Click="btnDelete_Click" />
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="0">
            <Label Content="{DynamicResource lblISBN}" VerticalContentAlignment="Center" Height="40" Width="110" />
            <TextBox x:Name="txtISBN" HorizontalAlignment="Center" Height="40" Width="300"
                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1">
            <Label Content="{DynamicResource lblTitle}" VerticalContentAlignment="Center" Height="40" Width="110" />
            <TextBox x:Name="txtTitle" HorizontalAlignment="Center" Height="40" Width="300"
                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2">
            <Label Content="{DynamicResource lblAuthors}" VerticalContentAlignment="Center" Height="40" Width="110" />
            <TextBox x:Name="txtAuthors" HorizontalAlignment="Center" Height="40" Width="300"
                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="3">
            <Label Content="{DynamicResource lblGenres}" VerticalContentAlignment="Center" Height="40" Width="110" />
            <TextBox x:Name="txtGenres" HorizontalAlignment="Center" Height="40" Width="300"
                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="4">
            <Label Content="{DynamicResource lblPrice}" VerticalContentAlignment="Center" Height="40" Width="110" />
            <TextBox x:Name="txtPrice" HorizontalAlignment="Center" Height="40" Width="300"
                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="5">
            <Label Content="{DynamicResource lblYear}" VerticalContentAlignment="Center" Height="40" Width="110" />
            <TextBox x:Name="txtYear" HorizontalAlignment="Center" Height="40" Width="300"
                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="6">
            <Label Content="{DynamicResource lblItems}" VerticalContentAlignment="Center" Height="40" Width="110" />
            <TextBox x:Name="txtItems" HorizontalAlignment="Center" Height="40" Width="300"
                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="7">
            <Label Content="{DynamicResource lblCreatedBy}" VerticalContentAlignment="Center" Height="40" Width="110" />
            <TextBox x:Name="txtCreatedBy" HorizontalAlignment="Center" Height="40" Width="300"
                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</UserControl>
